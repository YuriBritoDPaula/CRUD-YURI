      <div class="container">
        <div class="row">
          <div class="col-sm">
            <td><h1>Registro de Livro<span class="badge badge-secondary"></span></h1></td>
          </div>
          <h2></h2>
          <div class="container">
            <h2></h2>
            </div>
          </div>
    <form action="/show" method="POST">     
      <div class="form-group">
        <label for="exampleFormControlInput1">Titulo do Livro:*</label>
        <input type="text" class="form-control" placeholder="Titulo do Livro" name="name" required>
      </div>
      
      
      <div class="form-group">
        <label for="exampleFormControlInput1">Autor do Livro:*</label>
        <input type="text" class="form-control" placeholder="Autor do Livro" name="surname" required>
      </div>
         
      <div class="form-group">
        <label for="exampleFormControlInput1">Quantidade de Páginas:</label>
        <input type="text" class="form-control" placeholder="Ex: 365" name="quant">
        </div>
           
       

      <div class="form-group">
        <label for="local">Seção:</label>
        <br>
        <input type="radio" id="A" name="local" value="A">
        <label for="Secao A">Seção A</label><br>
        <input type="radio" id="B" name="local" value="B">
        <label for="Secao B">Seção B</label><br>
        <input type="radio" id="C" name="local" value="C">
        <label for="Secao C">Seção C</label><br>
        <input type="radio" id="D" name="local" value="D">
        <label for="Secao D">Seção D</label><br>
        <input type="radio" id="E" name="local" value="E">
        <label for="Secao E">Seção E</label><br>
</div>
            
      <div class="form-group">
        <label for="exampleFormControlInput1">Tema:*</label>
        <input type="text" class="form-control" placeholder="Ex: Terror, Aventura, Cómedia" name="tema" required>        
      </div>
    
      <div class="form-group">
        <label for="classi">Classificação Indicativa:*</label>
        <br>
        <select name="classi">
            <option value="L">L</option>
            <option value="10">10</option>
            <option value="12">12</option>
            <option value="14">14</option>
            <option value="16">16</option>
            <option value="18">18</option>
        </select>
</div>
          
      <div class="form-group">
        <label for="exampleFormControlInput1">Descrição:</label>
        <input type="text" class="form-control" placeholder="Ex: " name="descri"> 
       </div>
     
      <div class="form-group">
        <label for="exampleFormControlInput1">Editora:*</label>
        <input type="text" class="form-control" placeholder="Ex: " name="resumo" required>        
      </div>
     
      <div class="form-group">
        <button type="submit" class="btn btn-primary">REGISTRAR</button>
      </div>
    </form>
