<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Cadastros de Livros</title>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'/>
  
    <style>
    body {
        background-color: rgba(70, 58, 173, 0.616);
    }
    </style>
  
</head>
<body>
  <br> </br>
  <div style="text-align:center">
  <div class="btn-group">
    <button type="button" class="btn btn-success">Cadastro Aluno</button>
    <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="/">Home</a>
      <a class="dropdown-item" href="/show">Cadastros</a>
      <a class="dropdown-item"  href="/edit/5f657b7399cdfd38b475d652">Editar Cadastros</a>
      </div>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-waring">Cadastro Professor</button>
    <button type="button" class="btn btn-waring dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="/">Home</a>
      <a class="dropdown-item" href="/show">Cadastros</a>
      <a class="dropdown-item"  href="/edit/5f657b7399cdfd38b475d652">Editar Cadastros</a>
      </div>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-primary">Cadastro Livro</button>
    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="/">Home</a>
      <a class="dropdown-item" href="/show">Cadastros</a>
      <a class="dropdown-item"  href="/edit/5f657b7399cdfd38b475d652">Editar Cadastros</a>
      </div>
  </div>
  </div>
  
    <br> </br>    

    <script src='http://code.jquery.com/jquery-2.1.3.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
    <script>
     $(function () {
      $('.dropdown-toggle').dropdown();
        }); 
      </script>
       
  <style>
    .container {
        margin-top: 25px;
    }
</style>       
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div style="text-align:center">
        <td> <h1>Livros Cadastrados <span class="badge badge-secondary"></span></h1></td>
      </div>
      </div>
    </div>
  </div>    
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <td><p style="text-align:center">Nome</p></td>
            </div>
          <div class="col-sm">
            <td><p style="text-align:center">Sobrenome</p></td>
          </div>
           <div class="col-sm">
            <td><p style="text-align:center">Quantidade</p></td>
          </div> 
          <div class="col-sm">
            <td><p style="text-align:center">Seção</p></td>
          </div> 
          <div class="col-sm">
            <td><p style="text-align:center">Tema</p></td>
          </div>
           <div class="col-sm">
            <td><p style="text-align:center">Classificação Indicativa</p></td>
          </div>
           <div class="col-sm">
            <td><p style="text-align:center">Descrição</p></td>
          </div>
           <div class="col-sm">
            <td><p style="text-align:center">Editora</p></td>
          </div> 
          <div class="col-sm">
            <td></td>
          </div>
          <div class="col-sm">
            <td></td>
          </div>
          </div>
        </div>
        
    
    <tbody>
    <% data.forEach(function(details) { %>
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.name %></td>
          </div>
            </div>
            <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.surname %></td>
          </div>
                  </div>
           <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.quant %></td>
          </div>
          </div> 
          <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.local %></td>
          </div>
          </div> 
          <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.tema %></td>
          </div>
          </div>
           <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.classi %></td>
          </div>
          </div>
           <div class="col-sm">
            <div style="text-align:center">
            <td><%= details.descri%></td>
          </div>
            </div>
           <div class="col-sm">
            <div style="text-align:center">              
            <td><%= details.resumo %></td>
          </div>
          </div>
          <div class="col-sm">
            <td><a class="btn btn-warning" href="/edit/<%= details._id %>">EDITAR</a></td>
            <hr></hr>
          </div>
          <div class="col-sm">
            <td><a class="btn btn-info" href="/delete/<%= details._id %>">DELETAR</a></td>
            <hr></hr>
          </div>
          </div>
        </div> 
              
        <% }) %>
    </tbody>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <td><h2><a class="btn btn-dark" href="/">Novo</a></td>
        </div>
      </div>
    </div>         
  </body>
</html>
